'use strict'
const path = require('path')
const defaultSettings = require('./src/settings.js')
const webpack = require('webpack')
const ESLintWebpackPlugin = require('eslint-webpack-plugin')

function resolve(dir) {
  return path.join(__dirname, dir)
}

const name = defaultSettings.title || 'vue Admin Template'
const port = process.env.port || process.env.npm_config_port || 9528

module.exports = {
  publicPath: '/',
  outputDir: 'dist',
  assetsDir: 'static',
  lintOnSave: process.env.NODE_ENV === 'development',
  productionSourceMap: false,
  devServer: {
    port: port,
    open: true,
    client: {
      overlay: {
        warnings: false,
        errors: true
      }
    },
    // ğŸ”¥ æ ¸å¿ƒä¿®å¤ï¼šæ›¿æ¢åºŸå¼ƒçš„ before ä¸º setupMiddlewares
    setupMiddlewares: (middlewares, devServer) => {
      if (!devServer) {
        throw new Error('webpack-dev-server is not defined')
      }
      // å¯¼å…¥å¹¶æ‰§è¡Œ mock-server.jsï¼ˆä¿æŒåŸæœ‰ mock é€»è¾‘ï¼‰
      require('./mock/mock-server.js')(devServer.app)
      return middlewares
    }
    // ğŸ‘‡ è‹¥ä½ çš„ webpack-dev-server ç‰ˆæœ¬ç¨ä½ï¼Œå¯æ”¹ç”¨è¿™ä¸ªï¼ˆäºŒé€‰ä¸€ï¼‰
    // onBeforeSetupMiddleware: (devServer) => {
    //   require('./mock/mock-server.js')(devServer.app)
    // }
  },
  configureWebpack: {
    name: name,
    plugins: [
      new webpack.ProvidePlugin({
        Buffer: ['buffer', 'Buffer'],
        process: 'process/browser'
      }),
     new ESLintWebpackPlugin({
        extensions: ['js', 'vue'],
        fix: false,
        exclude: ['node_modules'],
        context: path.resolve(__dirname, 'src')
      })
    ],
    resolve: {
      alias: {
        '@': resolve('src')
      },
      fallback: {
        "path": require.resolve("path-browserify"),
        "crypto": require.resolve("crypto-browserify"),
        "stream": require.resolve("stream-browserify"),
        "buffer": require.resolve("buffer"),
        "process": require.resolve("process/browser"),
        "module": false,
        "fs": false
      }
    }
  },
  chainWebpack(config) {
    // ç§»é™¤ preload è‡ªå®šä¹‰é…ç½®ï¼ˆé¿å…æ’ä»¶æœªå®šä¹‰æŠ¥é”™ï¼‰
    config.plugins.delete('prefetch')
    config.module.rules.delete('svg')

    // SVG å¤„ç†é€»è¾‘ä¿ç•™
    config.module
      .rule('svg')
      .test(/\.svg$/)
      .oneOf('icons')
        .resourceQuery(/inline/) // åŒ¹é… ?inline çš„ svgï¼ˆå¦‚ <svg src="@/icons/xxx.svg?inline" />ï¼‰
        .include.add(resolve('src/icons'))
        .end()
        .use('svg-sprite-loader')
        .loader('svg-sprite-loader')
        .options({
          symbolId: 'icon-[name]'
        })
        .end()
      .end()
      .oneOf('normal')
        .use('file-loader')
        .loader('file-loader')
        .options({
          name: 'static/svg/[name].[hash:8].[ext]'
        })
        .end()

    // ç”Ÿäº§ç¯å¢ƒä»£ç åˆ†å‰²é€»è¾‘ä¿ç•™
    config
      .when(process.env.NODE_ENV !== 'development',
        config => {
          config
            .plugin('ScriptExtHtmlWebpackPlugin')
            .after('html')
            .use('script-ext-html-webpack-plugin', [{
              inline: /runtime\..*\.js$/
            }])
            .end()
          config
            .optimization.splitChunks({
              chunks: 'all',
              cacheGroups: {
                libs: {
                  name: 'chunk-libs',
                  test: /[\\/]node_modules[\\/]/,
                  priority: 10,
                  chunks: 'initial'
                },
                elementUI: {
                  name: 'chunk-elementUI',
                  priority: 20,
                  test: /[\\/]node_modules[\\/]_?element-ui(.*)/
                },
                commons: {
                  name: 'chunk-commons',
                  test: resolve('src/components'),
                  minChunks: 3,
                  priority: 5,
                  reuseExistingChunk: true
                }
              }
            })
          config.optimization.runtimeChunk('single')
        }
      )
  }
}
